<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#F0FFF0"
    tools:context=".SmsActivity">

    <View
        android:layout_width="200dp"
        android:layout_height="170dp"
        android:background="@drawable/top_left_corner_oval" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="90dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="70dp"
        android:text="Send SOS in\nEmergency"
        android:textAlignment="center"
        android:textSize="35sp" />

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/startService"
            android:layout_width="330dp"
            android:layout_height="70dp"
            android:shadowColor="@color/purple_500"
            android:text="Start SMS Alerts"
            android:textSize="8.5pt" />

        <Button
            android:id="@+id/stopService"
            android:layout_width="330dp"
            android:layout_height="70dp"
            android:shadowColor="@color/purple_500"
            android:text="Stop SMS Alerts"
            android:textSize="8.5pt" />

        <Button
            android:id="@+id/activateVoice"
            android:layout_width="330dp"
            android:layout_height="70dp"
            android:textSize="8.5pt"
            android:shadowColor="@color/purple_500"
            android:text="Activate Voice" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/li"
        android:layout_width="match_parent"
        android:layout_height="672dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="360dp"
            android:layout_marginRight="100dp"
            android:fontFamily="cursive"
            android:text="Helpline Numbers"
            android:textAlignment="center"
            android:textColorHighlight="@color/common_google_signin_btn_text_dark_pressed"
            android:textSize="35sp" />

        <Button
            android:id="@+id/btn_helpline"
            android:layout_marginTop="20dp"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:textSize="8.5pt"
            android:text="Helplines" />
    </LinearLayout>

</RelativeLayout>
